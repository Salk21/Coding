#include <iostream>
#include <cmath> 
#include <math.h>

using namespace std;
int main()
{
	setlocale(LC_CTYPE, "rus");
	int answer;
	answer = 0;
	string c;
	cout << "Введите римский символ" << endl;
	cin >> c;
	int k;
	char p[100];
	k = c.length(); // считает кол-во символов, введеное нами
	for (int i = 0; i <= k; i++) {
		switch (c[i]) {
		case 'I':
			if (i + 1 < k && (c[i + 1] == 'V' || c[i + 1] == 'X' || c[i + 1] == 'C')) {
				answer = answer - 1;
			}
			else answer++;
			break;

		case 'V':
			answer = answer + 5;
			break;

		case 'X':
			if (i + 1 < k && (c[i + 1] == 'L' || c[i + 1] == 'C' || c[i + 1] == 'M')) {
				answer = answer - 10;
			}
			else answer = answer + 10;
			break;

		case 'L':
			answer = answer + 50;
			break;
		case 'C':
			if (i + 1 < k && (c[i + 1] == 'D' || c[i + 1] == 'M')) {
				answer = answer - 100;
			}
			else answer = answer + 100;
			break;
		case 'D':
			answer += 500;
			break;
		case 'M':
			answer += 1000;
			break;
		}
	}
	cout << "Результат  " << answer << endl;
}
